<WeatherCard>
    padding: 4
    size_hint: 1, 1
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            id: desc_text
            text: "Сонячно"
            adaptive_size: True
            color: "grey"
            pos_hint:{"center_x":0.5}
            font_style: 'H5'
        MDLabel:
            id: temp_text
            text: "14 °C"
            adaptive_size: True
            color: "grey"
            pos: "12dp", "12dp"
            bold: True
            pos_hint:{"center_x":0.5}
            font_style: 'H5'
        AsyncImage:
            id: weather_icon
            pos_hint:{"center_x":0.5}
            source: "https://openweathermap.org/img/wn/10d@2x.png"
            size_hint: (None,None)
            height: "100sp"
            width: "100sp"
        MDLabel:
            id: rain_text
            text: "Ймовірність опадів: 20%"
            adaptive_size: True
            color: "grey"
            pos: "12dp", "12dp"
            bold: True
            pos_hint:{"center_x":0.5}
        MDLabel:
            id: wind_text
            text: "Швидкість вітру:15.3 М/С"
            adaptive_size: True
            color: "grey"
            pos: "12dp", "12dp"
            bold: True
            pos_hint:{"center_x":0.5}

<MainScreen>:
    MDBoxLayout:
        pos_hint: {"center_x": 0.5}
        orientation: 'vertical'
        spacing: "20sp"
        MDBoxLayout:
            pos_hint: {"center_x": 0.5}
            padding: "40sp"
            orientation: 'vertical'
            spacing: "20sp"
            MDTopAppBar:
                title: "My whiteApp"
                left_action_items: [["menu", lambda x: app.callback()]]
            MDBoxLayout:
                size_hint: 1, None
                orientation: 'horizontal'
                spacing: "20sp"
                MDTextField:
                    id: city_field
                    hint_text: "Введіть місто"
                    mode: "round"
                MDIconButton:
                    id: search_btn
                    icon: "magnify"
                    theme_icon_color: "Custom"
                    icon_color:
                    md_bg_color: ("#0b6e08")
                    on_press: root.weather_search()
            MDCarousel:
                id: Weather_carusel
                direction: 'right'
                padding: 10
                size_hint: 0.9, 0.8