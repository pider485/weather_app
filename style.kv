<WeatherCard>
    padding: 4
    size_hint: 0.8, 0.8
    MDRelativeLayout:
        MDLabel:
            id: label
            text: "Тут буде погода"
            adaptive_size: True
            color: "grey"
            pos: "12dp", "12dp"
            bold: True


<MainScreen>:
    MDBoxLayout:
        pos_hint: {"center_x": 0.5}
        padding: "40sp"
        orientation: 'vertical'
        spacing: "20sp"
        MDBoxLayout:
            size_hint: 1, None
            orientation: 'horizontal'
            spacing: "20sp"
            MDTextField:
                hint_text: "Введіть місто"
                mode: "round"
            MDIconButton:
                icon: "magnify"
                theme_icon_color: "Custom"
                icon_color:
                md_bg_color: ("#0b6e08")
        WeatherCard:
            id: Weather_card